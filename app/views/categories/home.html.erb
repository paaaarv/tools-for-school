<%require 'pry'%>

<h1> Tools For School </h1>


<% @categories.each do |category|%>
<% if category.supplies.length >= 1 %>
  <h3> <%= category.name %> </h3>
    <% see_two(category).each do |supply|%>
      <p> <%= "#{supply.name} | $#{supply.price} | #{amount_to_goal(supply)}"%> </p>
    <%end%>
    <p><%= link_to "See More", category_path(category)%></p><br>
  <%end%>
<%end%>
